<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>
    <template id="payslip_document" inherit_id="l10n_se_hr_payroll.payslip_document">
      <xpath expr="//td[@id='tidssaldon']" position="replace">
        <td id="tidssaldon" class="col-md-6 col-sm-6 col-xs-6">
          <t t-if="o.contract_id.type_id.work_time == 'flex'">
            <span style="font-size: 0.7em;">Tidssaldon</span>
            <br />
            <span class="pull-left">Komptid</span>
            <span class="pull-right">
              <t t-esc="o.compensary_leave" />
              minut(er)
            </span>
          </t>
        </td>
      </xpath>
    </template>
  </data>
</openerp>